<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
   >
    <TextView
        android:id="@+id/Surah_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/surah_number"
        tools:text="122"
        android:gravity="center"
        style="@style/bodySmall"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/Surah_Name_En"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="El Fatha "
        style="@style/bodyMedium"
        app:layout_constraintStart_toEndOf="@+id/Surah_number"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/Surah_Verse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="7 verse"
        style="@style/bodySmall"
        app:layout_constraintStart_toStartOf="@+id/Surah_Name_En"
        app:layout_constraintTop_toBottomOf="@id/Surah_Name_En"
        android:layout_marginTop="8dp"

        />
    <TextView
        android:id="@+id/Surah_Name_Ar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="الفاتحه"
        style="@style/bodyMedium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Surah_Name_En"
        app:layout_constraintBottom_toBottomOf="@+id/Surah_Verse"
        android:layout_marginTop="8dp"


        />
    <ImageView
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent=".7"
       app:layout_constraintEnd_toStartOf="@id/Surah_Name_Ar"

        android:layout_height="1dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/Surah_Verse"
        app:layout_constraintBottom_toBottomOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>