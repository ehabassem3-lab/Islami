<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#202020">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginHorizontal="20dp"
        >
        <TextView

            android:id="@+id/back_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />
        <TextView

            android:id="@+id/surah_name_en"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Al-Fatha"
            style="@style/titleMeduim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            />

        <ImageView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/surah_left_top"
            app:layout_constraintTop_toBottomOf="@id/surah_name_en"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintEnd_toStartOf="@+id/surah_name_ar"
            />
        <TextView
            android:paddingHorizontal="50dp"
            android:layout_marginTop="40dp"
            android:id="@+id/surah_name_ar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/surah_left_top"
            android:layout_weight="1"
            tools:text="الفاتحه"
            android:gravity="center"
            style="@style/titleMeduim"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/surah_name_en"



            />
        <ImageView
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/surah_name_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/surah_right_top"
            android:layout_weight="1"
            app:layout_constraintStart_toEndOf="@id/surah_name_ar"
            app:layout_constraintEnd_toEndOf="parent"
            />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/surah_name_ar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            >

            <TextView
                android:id="@+id/SlectedSurauh"
                style="@style/titleMeduim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </ScrollView>





    </androidx.constraintlayout.widget.ConstraintLayout>
    <ImageView
        android:id="@+id/surah_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/surah_fotter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>